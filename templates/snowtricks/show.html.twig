{% extends 'base.html.twig' %}

{% block title %}
    {{snowtrick.nom}}
{% endblock %}

{% block accroche %}
    {{snowtrick.nom}}
{% endblock %}

{% block body %}

        <article id="debut" class="pt-5">
            <div class="d-sm-none d-flex justify-content-center ">
                <p class="border text-white bg-dark p-1 rounded">See media</p>
            </div>
            <div class="d-sm-flex justify-content-evenly d-none">
                <img src="https://place-hold.it/150x150" alt="">
                <img src="https://place-hold.it/150x150" alt="">
                <img src="https://place-hold.it/150x150" alt="">
            </div>

            <div class="centent p-5">
                <div class="">
                    {{snowtrick.description}}
                </div>
                <div class="d-flex justify-content-around">
                    <div class="metadata border text-white bg-dark p-1 rounded">Groupe : {{ snowtrick.groupeFigure }} </div>
                    <div class=" border text-white bg-dark p-1 rounded">Crée le {{snowtrick.createdAt |date("d/m/Y")}}</div>
                    <div class=" border text-white bg-dark p-1 rounded">Mis à jour le {{snowtrick.updatedAt |date("d/m/Y")}}</div>
                </div>
            </div>
        </article>

        <hr>

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <h3>Ajouter un commentaire</h3>
            <div class="container91" style="position: relative; overflow: hidden; width: 100%; padding-top: 56.25%;">
                <iframe class="responsive-iframe91" style="position: absolute; top: 0; left: 0; bottom: 0; right: 0; width: 80%; height: 20%;" src="/message/new/{{snowtrick.id}}"></iframe>
            </div>
        {% endif %}

        {% if messages|length > 0 %}
            <div class="m-5">
            <h3>Comments :</h3>
            {% for msg in messages %}
            <div class="border bg-dark text-white d-flex justify-content-between p-2 align-middle">
                <div>
                    <img class="rounded-circle align-middle"
                        width="40" height="40"
                        src="https://mdbootstrap.com/img/Photos/Avatars/img(19).jpg">
                    <p class="font-italic text-muted align-middle h6">{{msg.createdAt |date("d/m/Y")}}</p>
                </div>
                <p class=" align-middle">{{msg.message}}</p>
            </div>
            {% endfor %}
        {% endif %}

        </div>

{% endblock %}
