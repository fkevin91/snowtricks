<div class="m-5">
    {{ form_start(form)}}
    {{ form_row(form.nom, { 'attr': {'class' : 'form-control m-1'}})}}
    {{ form_row(form.description, { 'attr': {'class' : 'form-control m-1'}})}}
    {{ form_row(form.groupeFigure, { 'attr': {'class' : 'form-control m-1'}})}}
    {{ form_row(form.photo, { 'attr': {'class' : 'form-control m-1'}})}}
    {{ form_row(form.video, { 'attr': {'class' : 'form-control m-1'}})}}
    <button type="submit" class="form-control bg-dark text-white m-1 mt-3">{{ button_label|default('Save') }}</button>
    {{ form_end(form)}}
</div>