{% extends 'base.html.twig' %}

{% block title %}Réinitialise ton mot de passe{% endblock %}

{% block laPhoto %}{% endblock %}


{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Réinitialise ton mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entre ton addresse email et nous allons t'envoyer un lien pour réinitialiser ton mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">M'envoyer un mail</button>
    {{ form_end(requestForm) }}
{% endblock %}
